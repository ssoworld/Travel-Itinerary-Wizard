{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommitType(fix)"
  ],
  "packageRules": [
    {
      "automerge": true,
      "groupName": "Minor and Patch dependencies",
      "groupSlug": "all",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchPackageNames": [
        "*"
      ]
    }
  ],
  "semanticCommits": "enabled"
}
